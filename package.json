{
  "name": "next-payload-starter",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "bun run test:int && bun run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" bunx playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "migrate": "bun run payload migrate",
    "migrate:create": "bun run payload migrate:create",
    "migrate:down": "bun run payload migrate:down",
    "migrate:fresh": "bun run payload migrate:fresh",
    "migrate:reset": "bun run payload migrate:reset",
    "migrate:status": "bun run payload migrate:status",
    "fix": "bun x ultracite fix",
    "check": "bun x ultracite check"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.74.0",
    "@payloadcms/next": "3.74.0",
    "@payloadcms/richtext-lexical": "3.74.0",
    "@payloadcms/storage-s3": "^3.69.0",
    "@payloadcms/ui": "3.74.0",
    "@tailwindcss/postcss": "^4.1.18",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "lucide-react": "^0.563.0",
    "next": "15.5.11",
    "payload": "3.74.0",
    "postcss": "^8.5.6",
    "react": "19.2.4",
    "react-aria": "^3.45.0",
    "react-aria-components": "^1.14.0",
    "react-dom": "19.2.4",
    "sharp": "0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-react-aria-components": "^2.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@playwright/test": "1.58.1",
    "@testing-library/react": "16.3.2",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.5.4",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "4.5.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "jsdom": "26.1.0",
    "lefthook": "^2.0.8",
    "playwright": "1.58.1",
    "playwright-core": "1.58.1",
    "typescript": "5.9.3",
    "ultracite": "6.3.9",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "bun": ">=1.3.5"
  },
  "trustedDependencies": [
    "sharp",
    "esbuild"
  ],
  "browserslist": [
    "chrome >= 90",
    "firefox >= 88",
    "safari >= 14",
    "edge >= 90"
  ]
}
